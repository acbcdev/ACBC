---
import Bg from "@/components/Bg.astro";
import "@/styles/globals.css";
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Astro Basics</title>
  </head>
  <body class="dark">
    <div class="grid place-content-center">
      <slot />
    </div>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: dark;
  }
  html,
  body {
    max-width: 80ch;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
    margin-inline: auto;
  }
</style>
